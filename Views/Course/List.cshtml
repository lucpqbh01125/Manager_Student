@model IEnumerable<Manager_SIMS.Models.Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .container-fluid {
            flex: 1;
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 88%;
        }
    </style>
</head>

<body >
    <header class="bg-primary text-white text-center p-3">
        <h1>
            Information Management System (SIMS)
        </h1>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 bg-light sidebar py-4">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="List" asp-controller="Course" >Manager Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="List" asp-controller="Enrollment">Assign Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Login" asp-controller="Account">Logout</a>
                    </li>
                </ul>
            </nav>
            <!-- Main content -->
         
            <main class="col-md-10 p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h3>Manager Courses List</h3>
                    <a asp-action="Create" class="btn btn-primary">Add new</a>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Semester</th>
                            <th>ID</th>
                            <th>Course</th>
                            <th>Credits</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.Semester</td>
                                <td>@course.CourseId</td>
                                <td>@course.CourseName</td>
                                <td>@course.Credits</td>
                                <td>@course.Description</td>
                                <td>@course.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Edit</a>
                                    <form asp-action="DeleteConfirmed" asp-route-id="@course.CourseId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </main>
        </div>
    </div>
    <footer class="bg-dark text-white d-flex align-items-center justify-content-center py-3 mt-2" style="height: 50px;">
        <p>&copy; 2025 Management System (SIMS). All rights reserved.</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
